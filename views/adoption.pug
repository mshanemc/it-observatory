extends layout

block content
  .slds-p-vertical_small.header
    img.slds-m-vertical_small(src='../images/LightningPlatformLogo.png' alt='lightning platform logo' width='200')
    p.slds-text-heading_large.uppercase Lightning Workshops
    p.slds-text-heading_medium
      b It's way better in Lightning


  .slds-grid.slds-wrap.slds-grid_align-space.slds-p-around_medium.content.slds-grid_vertical-stretch.main
    each w in workshops
      .slds-size_1-of-4.slds-box.slds-p-horizonal_medium.slds-m-bottom_xx-large.slds-m-horizontal_medium.tile
        div
          p.slds-text-heading_small.slds-p-vertical_xx-small.slds-text-align_center #{w.name}
          p.slds-p-vertical_small #{w.description}
        .slds-grid.slds-grid_align-space
          if (w.launchURL)
            a.slds-button.slds-button_brand(href=w.launchURL target='_blank') Create Org
          if (w.docsURL)
            a.slds-button.slds-button_neutral(href=w.docsURL target='_blank') Open Guide

  .footer
    img.slds-m-vertical_small(src='../images/Codey.png' alt='codey with package' id='codey')
    .banner.slds-box.slds-p-horizonal_medium
      p.slds-text-heading_medium.uppercase.slds-m-bottom_medium
       b Run your own Lightning Platform workshops!
      .bannerbody
        div
          p Want to help others build apps fast and easy with the Lightning Platform?
          p Find out how the Lightning Platform Workshop-in-a-Box can give you everything you need!
        a.slds-button.slds-button_neutral.slds-m-left_small(href='https://www.salesforce.com/campaign/lightning-platform-workshop-in-a-box/' target='_blank') Learn More





